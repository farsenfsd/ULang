    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#c3e0e5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/catEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>